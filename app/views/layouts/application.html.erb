<!DOCTYPE html>
<html>
  <head>
    <title>Pickup</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <% if cur_player %>
        <a class="nav-item nav-link">Welcome Baller <%= cur_player.name %>!!!</a>
        <a class="nav-item nav-link"> <%= link_to "Logout", logout_path, {:method => :delete, :class => "item"} %> </a>
        <a class="nav-item nav-link">  <%= link_to "Player Home Page", player_path(cur_player) %> </a>

        <% else %>
          <%= link_to("Login", login_path) %>  |
          <%= link_to("Signup", new_player_path) %>
        <% end %>
      </div>
    </div>
  </nav>

  <body>
    <div class="ui container">


    <div class="ui secondary pointing menu">


    </div>

    <% if flash[:error] %>
      <p style="color: red">
        <%= flash[:error] %>
      </p>
    <% elsif flash[:notice] %>
      <p style="color: green">
        <%= flash[:notice] %></p>
    <%end %>

    <div class="ui middle aligned center aligned grid">
      <div class="ten wide column">


    <%= yield %>

      </div>
    </div>
  </body>



</html>
